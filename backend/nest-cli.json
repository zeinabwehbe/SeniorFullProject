{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      { "include": "i18n/**/*", "watchAssets": true },
      { "include": "./application.yml", "outDir": "./dist/" },
        {
          "include": "database/scripts/**/*",
          "outDir": "./dist/"
        }
    ]
  }
}
