{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/main.ts",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "15mb",
        "includeFiles": [
          "backend/dist/**",
          "backend/src/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/main.ts",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
    },
    {
      "src": "/auth/(.*)",
      "dest": "backend/src/main.ts",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
    },
    {
      "src": "/(.*)",
      "dest": "backend/public/index.html",
      "status": 200
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "backend/src/main.ts"
    },
    {
      "source": "/auth/:path*",
      "destination": "backend/src/main.ts"
    }
  ]
}
